.main-menu {
  font-size: 0.5em;
  min-height: 7.5em;
  transition: all 0.2s linear;
  .items {
    display:none;
    flex-direction: row;
    justify-content: center;
    padding:1em 0;
    font-size: inherit;
    p {
      margin-bottom: 0;
    }
  }
  &.no-labels {
    p {
      display:none;
    }
  }
  .menu-bars {
    font-size: 1.5em;
    line-height: 1em;
    padding: 1em 1.5em;
  }
  box-sizing: border-box;
  background-color: rgba(255,255,255,0.2);
  transition: all $transition-short linear;
  transform: translate3d(0,0,0);
  opacity:0;
  a {
    color: white;
    font-size:1em;
    font-family: $font-headings;
    text-transform: uppercase;
    transition: all $transition-short linear;
  }
  &:hover {
    opacity:1;
    background-color: rgba(255,255,255,0.3);
  }
  &.scrolled {
    opacity:1;
    background-color: rgba(255,255,255,1);
    top:0;
    a {
      color:black;
    }
    &:hover {
      padding: 1em;
      @include media($bp-small) {
        padding: 1.5em;
      }
    }
  }
  .fa {
    color:get-color('azure',0);
  }
  li {
    text-align: center;
    padding:0 1em;
    width:20%;
    .icon {
      background-repeat: no-repeat;
      background-position: center;
    }
  }

  @include media ($bp-medium) {
    .menu-bars {
      display: none;
    }
    .items {
      display: flex;
    }
  }
}