.lightbox-container {
  display:none;
}
.lightbox-container.active {
  display: block;
  background-color: rgba(0,0,0,0.8);
  position: fixed;
  top:0;
  left:0;
  width:100%;
  height:100%;
  z-index:5000;
}

.lightbox-content-wrapper {
  display:block;
  @include media($bp-medium) {
    display:flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    z-index: 5001;
    width:100%;
    height:100%;
  }
  .box {
    background-color: white;
    position:relative;
    width:80%;
    .close {
      position: absolute;
      top:0.1em;
      right:0.1em;
      color:grey;
      line-height: 1em;
      font-size: 2em;

    }
  }

  .flex-wrapper {
    margin-top: 3em;
    padding: 1em 4em 0 2em;
    display: flex;
    .image {
      flex:2;

      .sdgs {
        display: flex;
        flex-direction: row;
        li {
          flex: 1;
        }
      }
    }
    .text {
      flex:3;
      padding-left: 2em;
    }
  }
}

.page-wrapper.fixed {
  position:fixed;
  top:50%;

}